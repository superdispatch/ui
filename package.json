{
  "name": "@superdispatch/ui",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/superdispatch/ui.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run version --no-private",
    "build-size": "yarn build && size-limit",
    "clean": "git clean -fxd -e '.idea' -e '.vscode'",
    "predocs": "rimraf docs",
    "docs": "run-s storybook:build playroom:build",
    "lint": "js-tools lint",
    "lint-changed": "git add . && yarn lint-staged",
    "preplayroom:build": "yarn playroom:generate",
    "playroom:build": "playroom build",
    "playroom:generate": "node scripts/generate-playroom-components.js",
    "preplayroom:start": "yarn playroom:generate",
    "playroom:start": "playroom start",
    "prerelease": "yarn --force && yarn lint && yarn test",
    "release": "yarn lerna publish",
    "prestart": "yarn",
    "start": "run-p storybook:start playroom:start",
    "storybook:build": "build-storybook -o docs --quiet",
    "storybook:start": "start-storybook -p 5000 --ci",
    "tdd": "jest --watch",
    "test": "jest --coverage --forceExit",
    "test-branch": "yarn test --changedSince origin/main",
    "test-changed": "yarn test --onlyChanged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc"
    }
  },
  "lint-staged": {
    "*": [
      "js-tools lint --fix"
    ]
  },
  "prettier": "@superdispatch/prettier-config",
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/__testutils__/",
      "/node_modules/"
    ],
    "globalSetup": "<rootDir>/globalSetup.ts",
    "modulePathIgnorePatterns": [
      ".+/pkg/.+"
    ],
    "resetMocks": true,
    "roots": [
      "<rootDir>/packages/dates/",
      "<rootDir>/packages/eslint-plugin/",
      "<rootDir>/packages/forms/",
      "<rootDir>/packages/hooks/",
      "<rootDir>/packages/lab/",
      "<rootDir>/packages/phones/",
      "<rootDir>/packages/testutils/",
      "<rootDir>/packages/ui/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "snapshotSerializers": [
      "snapshot-diff/serializer"
    ],
    "transform": {
      "\\.tsx?$": "babel-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@codemod/cli": "^2.3.0",
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@mdi/js": "^5.8.55",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@size-limit/preset-small-lib": "^4.9.0",
    "@storybook/addon-docs": "^6.1.2",
    "@storybook/addon-essentials": "^6.1.2",
    "@storybook/react": "^6.1.2",
    "@storybook/source-loader": "^6.1.2",
    "@superdispatch/babel-preset": "^0.2.22",
    "@superdispatch/eslint-plugin": "^0.2.23",
    "@superdispatch/js-tools": "^0.2.22",
    "@superdispatch/prettier-config": "^0.2.22",
    "@superdispatch/tsconfig": "^0.2.22",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/css": "^0.0.31",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/luxon": "^1.25.0",
    "@types/mockdate": "^2.0.0",
    "@types/prettier": "^2.1.5",
    "@types/qs": "^6.9.5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-is": "^17.0.0",
    "@types/react-window": "^1.8.1",
    "@types/styled-components": "^5.1.4",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.1",
    "babel-plugin-direct-import": "^0.6.2",
    "babel-plugin-object-to-json-parse": "^0.2.1",
    "babel-plugin-optimize-clsx": "^2.6.0",
    "css": "^3.0.0",
    "csstype": "^3.0.5",
    "dedent": "^0.7.0",
    "eslint": "^7.14.0",
    "eslint-plugin-eslint-config": "^1.0.4",
    "execa": "^4.1.0",
    "formik": "2.2.5",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "lodash": "^4.17.15",
    "loki": "^0.25.1",
    "lorem-ipsum": "^2.0.3",
    "mockdate": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "playroom": "^0.22.3",
    "prettier": "^2.2.0",
    "react": "~17.0.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "~17.0.1",
    "react-element-to-jsx-string": "^14.3.2",
    "react-test-renderer": "~17.0.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "size-limit": "^4.9.0",
    "snapshot-diff": "^0.8.0",
    "storybook-addon-playroom": "^2.0.0",
    "styled-components": "^5.2.1",
    "typescript": "~4.1.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "resetMocks": true,
  "size-limit": [
    {
      "ignore": [
        "react"
      ],
      "path": "packages/hooks/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-dom"
      ],
      "path": "packages/ui/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-dom",
        "@superdispatch/ui"
      ],
      "path": "packages/lab/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-dom",
        "@superdispatch/ui"
      ],
      "path": "packages/dates/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-dom",
        "@superdispatch/ui"
      ],
      "path": "packages/phones/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-dom",
        "@superdispatch/ui",
        "@superdispatch/dates",
        "@superdispatch/phones"
      ],
      "path": "packages/forms/pkg/dist-web/index.js"
    }
  ],
  "loki": {
    "configurations": {
      "desktop": {
        "target": "chrome.app",
        "width": 1440,
        "height": 900,
        "deviceScaleFactor": 1,
        "mobile": false
      }
    }
  }
}
