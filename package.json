{
  "name": "@superdispatch/ui",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/superdispatch/ui.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --no-private",
    "build-size": "yarn build && size-limit",
    "prebump": "yarn && yarn lint && yarn docs && yarn test && yarn build",
    "bump": "lerna version",
    "predocs": "rimraf docs",
    "docs": "run-s storybook:build playroom:build",
    "lint": "js-tools lint",
    "preplayroom:build": "yarn playroom:generate",
    "playroom:build": "playroom build",
    "playroom:generate": "node scripts/generate-playroom-components.js",
    "preplayroom:start": "yarn playroom:generate",
    "playroom:start": "playroom start",
    "prestart": "yarn",
    "start": "run-p storybook:start playroom:start",
    "storybook:build": "build-storybook -o docs --quiet",
    "storybook:start": "start-storybook -p 5000 --ci",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc"
    }
  },
  "lint-staged": {
    "*": [
      "js-tools lint --fix"
    ]
  },
  "prettier": "@superdispatch/prettier-config",
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/__testutils__/",
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      ".+/pkg/.+"
    ],
    "resetMocks": true,
    "roots": [
      "<rootDir>/packages/dates/",
      "<rootDir>/packages/phones/",
      "<rootDir>/packages/ui/",
      "<rootDir>/packages/testutils/",
      "<rootDir>/packages/forms/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "snapshotSerializers": [
      "snapshot-diff/serializer"
    ],
    "transform": {
      "\\.tsx?$": "babel-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@codemod/cli": "^2.2.1",
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@mdi/js": "^5.6.55",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@storybook/addon-docs": "^6.0.22",
    "@storybook/addon-essentials": "^6.0.22",
    "@storybook/react": "^6.0.22",
    "@storybook/source-loader": "^6.0.22",
    "@superdispatch/babel-preset": "^0.2.1",
    "@superdispatch/eslint-plugin": "^0.2.1",
    "@superdispatch/gh-scripts": "^0.2.4",
    "@superdispatch/js-tools": "^0.2.1",
    "@superdispatch/prettier-config": "^0.2.1",
    "@superdispatch/tsconfig": "^0.2.1",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.6",
    "@types/css": "^0.0.31",
    "@types/faker": "^5.1.2",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.155",
    "@types/luxon": "^1.25.0",
    "@types/mockdate": "^2.0.0",
    "@types/prettier": "^2.1.1",
    "@types/qs": "^6.9.5",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-window": "^1.8.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-direct-import": "^0.6.2",
    "babel-plugin-optimize-clsx": "^2.6.0",
    "css": "^3.0.0",
    "dedent": "^0.7.0",
    "eslint": "^7.10.0",
    "execa": "^4.0.3",
    "formik": "^2.1.6",
    "husky": "^4.2.3",
    "jest": "^26.3.0",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "lodash": "^4.17.15",
    "lorem-ipsum": "^2.0.3",
    "mockdate": "^3.0.2",
    "netlify-cli": "^2.64.1",
    "npm-run-all": "^4.1.5",
    "playroom": "^0.21.7",
    "prettier": "^2.1.2",
    "react": "^16.13.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.13.0",
    "react-element-to-jsx-string": "^14.3.1",
    "react-test-renderer": "^16.13.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "size-limit": "^4.6.0",
    "snapshot-diff": "^0.8.0",
    "storybook-addon-playroom": "^2.0.0",
    "typescript": "~4.0.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "resetMocks": true,
  "size-limit": [
    {
      "ignore": [
        "react",
        "react-is",
        "prop-types",
        "@material-ui/core"
      ],
      "path": "packages/ui/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-is",
        "prop-types",
        "@material-ui/core",
        "react-keyed-flatten-children"
      ],
      "path": "packages/dates/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-is",
        "prop-types",
        "@material-ui/core",
        "react-keyed-flatten-children"
      ],
      "path": "packages/phones/pkg/dist-web/index.js"
    },
    {
      "ignore": [
        "react",
        "react-is",
        "prop-types",
        "@material-ui/core",
        "luxon",
        "formik",
        "react-day-picker",
        "awesome-phonenumber",
        "react-keyed-flatten-children"
      ],
      "path": "packages/forms/pkg/dist-web/index.js"
    }
  ]
}
